#include <iostream>
using namespace std;

struct Edge {
    int u, v, w;
};

int parent[10];

int find(int i) {
    while(parent[i] != i)
        i = parent[i];
    return i;
}

void unite(int x, int y) {
    parent[x] = y;
}

int main() {
    Edge edges[5] = {
        {0,1,10},
        {0,2,6},
        {0,3,5},
        {1,3,15},
        {2,3,4}
    };

    for(int i=0;i<4;i++)
        parent[i] = i;

    cout << "Edges in MST:\n";
    for(int i=0;i<5;i++) {
        int x = find(edges[i].u);
        int y = find(edges[i].v);

        if(x != y) {
            cout << edges[i].u << " - " << edges[i].v << " : " << edges[i].w << endl;
            unite(x, y);
        }
    }
    return 0;
}
